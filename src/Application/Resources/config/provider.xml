<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="application.infrastructure.provider.user.class">Infrastructure\Provider\UserProvider</parameter>
    </parameters>

    <services>
        <service id="application.provider" alias="application.infrastructure.provider.user" />

        <service id="application.infrastructure.provider.user" class="%application.infrastructure.provider.user.class%" public="false">
            <argument type="service" id="black_user.infrastructure.service.read" />
            <argument type="service" id="black_user.infrastructure.manager.user" />
            <argument type="service" id="event_dispatcher" />
            <argument>Domain\Model\User</argument>
        </service>
    </services>

</container>
