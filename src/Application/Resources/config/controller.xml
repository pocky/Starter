<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="application.controller.default.class">Application\Controller\DefaultController</parameter>

        <parameter key="application.controller.admin.security.class">Application\Controller\Admin\SecurityController</parameter>
        <parameter key="application.controller.admin.default.class">Application\Controller\Admin\DefaultController</parameter>

        <parameter key="application.controller.admin.user.create.class">Application\Controller\Admin\User\CreateController</parameter>
        <parameter key="application.controller.admin.user.create_form.class">Application\Controller\Admin\User\CreateFormController</parameter>
        <parameter key="application.controller.admin.user.list.class">Application\Controller\Admin\User\ListController</parameter>
        <parameter key="application.controller.admin.user.remove.class">Application\Controller\Admin\User\RemoveController</parameter>

    </parameters>

    <services>
        <service id="application.controller.default" class="%application.controller.default.class%">
            <argument type="service" id="templating" />
        </service>

        <service id="application.controller.admin.security" class="%application.controller.admin.security.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="black_user.application.form.login" />
        </service>

        <service id="application.controller.admin.default" class="%application.controller.admin.default.class%">
            <argument type="service" id="templating" />
        </service>

        <service id="application.controller.admin.user.create" class="%application.controller.admin.user.create.class%" scope="request">
            <argument type="service" id="black_user.application.controller.create" />
            <argument type="service" id="black_user.application.form.handler.create_user" />
            <argument type="service" id="router" />
        </service>

        <service id="application.controller.admin.user.create_form" class="%application.controller.admin.user.create_form.class%">
            <argument type="service" id="black_user.application.form.create_user" />
            <argument type="service" id="templating" />
        </service>

        <service id="application.controller.admin.user.list" class="%application.controller.admin.user.list.class%">
            <argument type="service" id="black_user.application.controller.list" />
            <argument type="service" id="templating" />
        </service>

        <service id="application.controller.admin.user.remove" class="%application.controller.admin.user.remove.class%">
            <argument type="service" id="black_user.application.controller.remove" />
            <argument type="service" id="router" />
        </service>

    </services>
</container>
