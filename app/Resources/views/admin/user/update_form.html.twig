{% extends '::admin_base.html.twig' %}

{% block body %}
    {% include ':admin/_layout:header.html.twig' %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include ':admin/_layout:sidebar.html.twig' %}

        <aside class="right-side">

            <section class="content-header">
                <h1>
                    {% trans %}application.admin.content.header.title{% endtrans %}
                    <small>{% trans %}application.admin.user.header.title{% endtrans %}</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> {% trans %}application.admin.content.breadcrumb.home{% endtrans %}</a></li>
                    <li class="active">{% trans %}application.admin.user.breadcrumb.list{% endtrans %}</li>
                </ol>
            </section>

            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% for flashMessage in app.session.flashbag.get('success') %}
                            <div class="alert alert-success alert-dismissable">
                                <i class="fa fa-check"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">{% trans %}Modifier l'utilisateur{% endtrans %}</h3>
                            </div>

                            <div class="box-body table-responsive">

                                <div class="box box-primary">
                                    <div class="box-header">
                                        <h3 class="box-title">Compte utilisateur</h3>
                                    </div>
                                    <div class="box-body">

                                        <form id="admin_user_update_account" method="POST" action="{{ url('admin_user_update_account', {}, true) }}" {{ form_enctype(accountForm) }}>
                                            {{ form_rest(accountForm) }}

                                            <button type="submit" class="btn btn-primary">{% trans %}application.admin.user.create.footer.submit{% endtrans %}</button>
                                        </form>

                                    </div>

                                    <div class="box-header">
                                        <h3 class="box-title">Mise à jour du mot de passe</h3>
                                    </div>
                                    <div class="box-body">

                                        <form id="admin_user_update_password" method="POST" action="{{ url('admin_user_update_password', {}, true) }}" {{ form_enctype(passwordForm) }}>
                                            {{ form_rest(passwordForm) }}

                                            <button type="submit" class="btn btn-primary">{% trans %}application.admin.user.create.footer.submit{% endtrans %}</button>
                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </aside>
    </div>

{% endblock body %}
