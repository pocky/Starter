{% extends '::admin_base.html.twig' %}

{% block body %}
    {% include ':admin/_layout:header.html.twig' %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include ':admin/_layout:sidebar.html.twig' %}

        <aside class="right-side">

            <section class="content-header">
                <h1>
                    {% trans %}application.admin.content.header.title{% endtrans %}
                    <small>{% trans %}application.admin.user.header.title{% endtrans %}</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> {% trans %}application.admin.content.breadcrumb.home{% endtrans %}</a></li>
                    <li class="active">{% trans %}application.admin.user.breadcrumb.list{% endtrans %}</li>
                </ol>
            </section>

            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% for flashMessage in app.session.flashbag.get('success') %}
                            <div class="alert alert-success alert-dismissable">
                                <i class="fa fa-check"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">{% trans %}application.admin.user.list.title{% endtrans %}</h3>
                            </div>

                            <a class="btn btn-app">
                                <i class="fa fa-edit"></i> Create
                            </a>

                            <div class="box-body table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>{% trans %}application.admin.user.list.thead.name{% endtrans %}</th>
                                            <th>{% trans %}application.admin.user.list.thead.email{% endtrans %}</th>
                                            <th>{% trans %}application.admin.user.list.thead.active{% endtrans %}</th>
                                            <th>{% trans %}application.admin.user.list.thead.lastConnection{% endtrans %}</th>
                                            <th>{% trans %}application.admin.user.list.thead.actions{% endtrans %}</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <th>{{ user.name }}</th>
                                                <th>{{ user.email }}</th>
                                                <th>{{ user.active }}</th>
                                                <th>{{ user.lastConnection|format_date }}</th>
                                                <th>
                                                    <a href="{{ url('admin_user_remove', { 'id': user.userId }, true) }}"
                                                       class="btn btn-danger"
                                                       title="{% trans %}application.admin.user.list.th.action.remove{% endtrans %}">
                                                        <i class="fa fa-fw fa-trash-o"></i>
                                                    </a>
                                                </th>
                                            </tr>
                                        {% endfor %}
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </aside>
    </div>
{% endblock body %}
